<h1> Create A Figure </h1>

<form action="/figures" method="POST">
  <label>Figure Name:</label> <br />
    <input type="text" name="figure[name]" id="figure_name" />
  <br />

  <label>Titles:</label> <br />
    <% Title.all.each do |title| %>
      <label><%= title.name %></label>
      <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>"> <br />
    <% end %>

  <label>Create a New Title:</label> <br />
    <input type="text" name="title[name]" id="new_title" />
    <br />

  <label>Landmarks:</label> <br />
    <% Landmark.all.each do |landmark| %>
      <label><%= landmark.name %></label>
      <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>"> <br />
    <% end %>
  <label>Create a New Landmark:</label> <br />
    <input type="text" name="landmark[name]" id="new_landmark" /> <br />
    <label>Year Built:</label> <br />
    <input type="text" name="landmark[year_completed]" id="new_landmark_year" /> <br />
  <input type="submit" value="Create New Figure" />
</form>
