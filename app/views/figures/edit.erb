<h1>Edit <%= @figure.name %></h1>

<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" name="_method" value="PATCH" />

  <label>Figure Name:</label> <br>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"/> <br>

  <label>Edit Titles:</label> <br>
  <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>"<%= 'checked' if @figure.titles.include?(title) %>>
  <% end %>
  <br>
  <label>Add New Title:</label>
  <input type="text" name="title[name]" id="new_title" /> <br>
  <br>

  <label>Edit Landmarks:</label> <br />
  <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= landmark.name %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>>
  <% end %>
  <br>
  <label>Add New Landmark:</label>
  <input type="text" name="landmark[name]" id="new_landmark" />
  <br>

  <input type="submit" value="Edit Figure" />
</form>
